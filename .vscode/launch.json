{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "/tmp/chrome-debug",
      "breakOnLoad": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "name": "Launch Chrome against localhost (Secure)",
      "url": "https://localhost:8080/",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "/tmp/chrome-debug",
      "breakOnLoad": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "name": "Launch Chrome against IP (Secure)",
      "url": "https://192.168.0.2:8080/",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "/tmp/chrome-debug",
      "breakOnLoad": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    }
  ]
}
